<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAscDistance"
        style="@style/UiButton.SortingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_ascending"
        android:text="@string/distance_low_to_high"
        app:layout_constraintBottom_toTopOf="@id/dividerAscDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/dividerAscDistance"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/bluishWhite"
        app:layout_constraintBottom_toTopOf="@id/buttonDescDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDescDistance"
        style="@style/UiButton.SortingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_descending"
        android:text="@string/distance_high_to_low"
        app:layout_constraintBottom_toTopOf="@id/dividerDescDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/dividerDescDistance"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/bluishWhite"
        app:layout_constraintBottom_toTopOf="@id/buttonAscPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAscPrice"
        style="@style/UiButton.SortingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_ascending"
        android:text="@string/price_low_to_high"
        app:layout_constraintBottom_toTopOf="@id/buttonDescPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/dividerAscPrice"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/bluishWhite"
        app:layout_constraintBottom_toTopOf="@id/buttonDescPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDescPrice"
        style="@style/UiButton.SortingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_descending"
        android:text="@string/price_high_to_low"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
