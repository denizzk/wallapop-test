<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Headline -->

    <style name="customTextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_XXL</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.008</item>
    </style>

    <style name="customTextAppearanceHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_XL</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="customTextAppearanceHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/text_size_L</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="customTextAppearanceNormal" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="customTextAppearanceLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_XXS</item>
        <item name="android:textColor">@color/bluishWhite</item>
        <item name="android:letterSpacing">@dimen/text_letter_spacing</item>
    </style>

    <!-- Text Heading -->

    <style name="TextH1">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline1</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextH2">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline2</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextH3">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline3</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextNormal">
        <item name="android:textAppearance">@style/customTextAppearanceNormal</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <!-- Button -->

    <style name="customButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- UI Buttons -->

    <style name="UiButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/customButton</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:maxWidth">110dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:background">@drawable/background_button_top_rounded</item>
        <item name="android:padding">@dimen/spacing_M</item>
        <item name="android:layout_margin">@dimen/spacing_M</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UiButton.Confirm">
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/background_state_black</item>
        <item name="android:minWidth">400dp</item>
    </style>

    <style name="UiButton.Black">
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/background_state_black</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="UiButton.Green">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_green</item>
    </style>

    <style name="UiButton.Blue">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_blue</item>
    </style>

    <style name="UiButton.Red">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_red</item>
    </style>

    <style name="UiButton.Share">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UiButton.SortingType">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/spacing_XL</item>
        <item name="android:drawablePadding">@dimen/spacing_XXL</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UiButton.SortingTypeActive">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/spacing_XL</item>
        <item name="android:drawablePadding">@dimen/spacing_XXL</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="UiButton.SortBy">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
