<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute">

    <!-- due to a limitation in Android API, the medium font had to be moved to it's own font family-->
    <!-- proper support for textFontWeight was added in API 28 -->

    <font
        android:font="@font/dinnextltpro_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/dinnextltpro_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <font
        android:font="@font/dinnextltpro_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/dinnextltpro_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

</font-family>